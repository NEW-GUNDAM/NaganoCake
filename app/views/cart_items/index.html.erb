<div class="container">
	<div class="row">
	    <div class="col-lg-12">
		    <h3 class="title" style="float:left;">ショッピングカート</h3>
		    <div class="text-right title">
		        <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "pull-right btn btn-danger" %>
		    </div>
	        <table class="table table-bordered col-lg-12">
	            <tr class="thead-light">
	            	<th style="width:40%">商品名</th>
	            	<th style="width:15%">単価（税込）</th>
	            	<th style="width:15%">数量</th>
	            	<th style="width:15%">小計</th>
	            	<th style="width:15%"></th>
	            </tr>
	            <% @cart_items.each do |cart| %>
	            <tr>
	            	<td>
	            		<a><%= cart.product.image %></a>
	            		<%= cart.product.name %>
	            	</td>
	            	<td><%= cart.product.tax_price %>円</td>

	            	<td>
	            		<%= form_for(cart, url:cart_item_path(cart)) do |f| %>
	            		    <%= f.number_field :quantity, value: cart.quantity %>
		                	<%= f.submit "変更", class: "btn btn-primary" %>
	                	<% end %>
	            	</td>
	            	<td><%= cart.product.tax_price * cart.quantity %>円</td>
	            	<td>
	            		<%= link_to "削除する", cart_item_path(cart) ,method: :delete ,class: "btn btn-danger" %>
	            	</td>
	          	</tr>
	          	<% end %>
	        </table>
	        <table class="table table-bordered col-lg-4 float-right">
	        	<tr class="thead-light">
	          		<th style="width:50%">合計金額</th>
	          		<td style="width:50%"><%= @total_price.floor %>円</td>
	        	</tr>
	        </table>
	        <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %><br><br><br>
	        <div class="text-center">
	            <%= link_to "情報入力に進む",new_order_path, class: "btn btn-success" %>
		    </div>
	    </div>
	</div>
</div>