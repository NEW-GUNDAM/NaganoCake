<div class = "container">

    <div class = "row">

        <div class = "admins_products_new">
            <h3>商品新規登録</h3>
            <%= form_for (@product), url: admins_products_path, method: :post do |f| %>

            <h4>商品名</h4>
                <%= f.text_field :name %>
            <h4>商品説明</h4>
                <%= f.text_area :introduction %>
            <h4>ジャンル</h4>
                <%= f.select :genre_id, Genre.all.map {|genre| [genre.genre_name, genre.id ] } %>

            <h4>税抜価格</h4>
                <%= f.text_field :price %>
            <h4>販売ステータス</h4>

                <%= f.submit '新規登録' %>
            <% end %>

        </div>
    </div>
</div>
