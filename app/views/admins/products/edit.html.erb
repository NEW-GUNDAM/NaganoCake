<div class = "container">

    <div class = "row">

        <div class = "admins_products_edit_main">
            <h3>商品編集</h3>
            <%= attachment_image_tag @product, :image, format: 'jpeg', size:"100x100" %>
            <%= form_for (@product), url: admins_product_path(@product), method: :patch do |f| %>
            <%= f.attachment_field :image %>
            <h4>商品名</h4>
              <%= f.text_field :name %>
            <h4>商品説明</h4>
              <%= f.text_area :introduction %>
            <h4>ジャンル</h4>
              <%= f.select :genre_id, Genre.all.map {|genre| [genre.genre_name, genre.id ] } %>
            <h4>税抜価格</h4>
              <%= f.text_field :price %>
            <h4>販売ステータス</h4>
              <%= f.select :status, {"販売中" => "true", "販売中止"=> "false"} %>
            <div class="button">
              <%= f.submit '変更を保存' %>
            </div>
            <% end %>
        </div>
    </div>
</div>
