<div class = "row">
  <div class="col-offset-xs-1">
    <div class="col-xs-11 admins_products_index_main">
      <h3>商品一覧</h3>
    	<%= link_to new_admins_product_path do %>
          <i class="glyphicon glyphicon-plus-sign icon" style = "font-size: 50px"></i>
        <% end %>

    	<table class = "table">
	      <thead>
	    	<tr>
    		  <th>商品ID</th>
    		  <th>商品名</th>
    		  <th>税抜価格</th>
    		  <th>ジャンル</th>
    		  <th>ステータス</th>
	    	</tr>
	      </thead>
	      <tbody>
	      	<% @products.each do |product| %>
	    	<tr>
    		  <td><%= product.id %></td>
    		  <td><%= link_to product.name, admins_product_path(product) %></td>
    		  <td><%= (product.price).to_s(:delimited) %> 円</td>
    		  <td><%= product.genre.genre_name %></td>
	    	  <td>
	    		<% if product.status? %>
                  販売中
                <% else %>
                  売切れ
                <% end %>
	    	  </td>
	    	</tr>
	      <% end %>
	      </tbody>
    	</table>
    </div>
  </div>
</div>
<%= paginate @products %>