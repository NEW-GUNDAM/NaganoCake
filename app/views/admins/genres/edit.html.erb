<div class="container">
  <div class="row">
  	<div class="col-xs-offset-2">
	  <div class="col-xs-9">
		<h4>ジャンル編集</h4>

		<%= form_for (@genre), url: admins_genres_path do |f| %>
		  <%= f.label :ジャンル %>
          <%= f.text_field :genre_name, autofocus: true, autocomplete: "genre_name" %>
          <input type="radio" name="genre_status" value="true" >有効
          <input type="radio" name="genre_status" value="fault">無効
          <%= f.submit "変更を保存する" , class: "btn btn-primary" %>
        <% end %>

       </div>
	</div>
  </div>
</div>