<div class="container">
  <div class="row">
  	<div class="col-xs-offset-2">
	  <div class="col-xs-9">
		<h4>ジャンル一覧・追加</h4>

		<%= form_for (@genre), url: admins_genres_path do |f| %>
		  <%= f.label :ジャンル %>
          <%= f.text_field :genre_name, autofocus: true, autocomplete: "genre_name" %>
          <%= f.radio_button :genre_status, :true %>
          <%= f.label :genre_status, "有効"  %>
          <%= f.radio_button :genre_status, :false %>
          <%= f.label :genre_status, "無効" %>
          <%= f.submit "追加" ,class: "btn btn-primary" %>
        <% end %>

      	<table class="table genre-index">
      	  <thead>
      	    <th>ジャンル</th>
      	    <th>状態</th>
      	    <th></th>
		  </thead>

		  <tbody>
		    <% @genres.each do |genre| %>
		    <tr>
		      <td><%= genre.genre_name %></td>
		      <td>
		  	    <% if genre.genre_status %>
		  		  有効
		  	    <% else %>
		  		  無効
		  	    <% end %>
		      </td>
		      <td>
		  	    <%= link_to "編集する", edit_admins_genre_path(genre), class: 'btn btn-primary' %>
		      </td>
			</tr>
		    <% end %>
		  </tbody>
		</table>
	  </div>
	</div>
  </div>
</div>