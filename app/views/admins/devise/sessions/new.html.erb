
<div class="row">
  <div class="col-xs-offset-1">
    <div class="col-xs-11">
    <h4>管理者ログイン</h4>

      <div class="admin-sing_in">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :登録情報保存 %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>

    </div>

      <%= render "admins/devise/shared/links" %>

    </div>
  </div>
</div>
<!-- エラーメッセージはアプリケーションコントローラーに記載していますが、反映されません。たぶんsessionsコントローラーいります -->
