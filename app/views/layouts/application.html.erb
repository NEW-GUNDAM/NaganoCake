<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>

 
      <header class="header">
      <% if request.fullpath.include? "admin" %>
<!-- adminログイン後ヘッダー -->

    <nav>
        <%= link_to "ながのCAKE管理者用", admins_root_path %>

          <% if admin_signed_in %>

            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to "商品一覧", products_path %>
              </li>
              <li class="nav-item">
                <%= link_to "会員一覧", admins_customers_path %>
              </li>
              <li class="nav-item">
                <%= link_to "全顧客_注文履歴一覧", admins_order_items_path %>
              </li>
              <li class="nav-item">
                <%= link_to "ジャンル一覧", admins_genres_path %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", new_admin_session_path %>
              </li>
            </ul>
        <% end %>
    </nav>


      <% else %>


    <div>
        <%= link_to "ながのCAKE", root_path %>
    </div>

    <nav class="nacbar">
      <% if customer_signed_in? %>
      <!-- カスタマーログイン後 -->
          <span>ようこそ！！
            <%= customer.last_name %>
            <%= customer.first_name %>さん！
          </span>
          
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to "マイページ", customer_path %>
              </li>
              <li class="nav-item">
                <%= link_to "商品一覧", products_path %>
              </li>
              <li class="nav-item">
                <%= link_to "カート", cart_items_path %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", new_customer_session_path %>
              </li>
            </ul>

       <% else %>


 <!-- adminログイン前ヘッダー ＝ カスタマーログイン前 -->
        <span>ようこそ！ゆっくり見ていって頂戴</span>

         
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "about", products_about_path %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", products_path %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_customer_registration_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_customer_session_path %>
            </li>
          </ul>

      <% end %>
    </nav>

    <% end %>
  </header>




    <main>
    <%= yield %>
    </main>

    <!-- フッター -->
    <footer>©ホワイト企業なGUNDAMチーム</footer>
  </body>
</html>
