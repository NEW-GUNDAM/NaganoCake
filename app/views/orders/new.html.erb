<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h3 class="title">注文情報入力</h3><br>


         <%= form_with model: @order, local: true, url: orders_path do |f| %>
			<p>支払い方法</p>
					<%= f.radio_button :how_to_pay, 0, checked: true %>
					<%= f.label :how_to_pay, "銀行振込", style: "display: inline-block"  %><br>
					<%= f.radio_button :how_to_pay, 1 %>
					<%= f.label :how_to_pay, "クレジットカード", style: "display: inline-block" %><br><br>


			<p>お届け先</p>


				<%= f.radio_button(:selected_address, "my address", checked: true) %>
				<%= f.label :selected_address, "ご自身の住所", style:"display:inline-block" %>
				<div>
					<%= current_customer.address %>
				</div>

				<%= f.radio_button(:selected_address, "address") %>
				<%= f.label :登録先住所から選択 %><br>
				<div>
					<%= f.collection_select :shipping, @addresses, :id, :address_detail %>
				</div>


				<%= f.radio_button(:selected_address, "new address") %>
				<%= f.label :新しいお届け先 %><br>

				<div>
					<%= f.label :郵便番号, style: "width: 100px;" %>
					<%= f.text_field :zipcode, style: "width: 200px;" %>
				</div>

				<div>
					<%= f.label :住所, style: "width: 100px;"%>
					<%= f.text_field :send_to_address, style: "width: 500px;" %>
				</div>

				<div>
					<%= f.label :宛名, style: "width: 100px;" %>
					<%= f.text_field :addressee, style: "width: 200px;" %>
				</div>

				<div>
					<%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
				</div>

			<% end %>
		</div>
	</div>
</div>

