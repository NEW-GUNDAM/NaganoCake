<div class="container">

  <h2 class="title">登録情報編集</h2>
  <%= form_for(@customer) do |f| %>
  <div class="row">
  
    <div class="col"><%= f.label :名前 %></div>
    <div class="col"><%= f.label :姓 %></div>
    <div class="col"><%= f.text_field :last_name %></div>
    <div class="col"><%= f.label :名 %></div>
    <div class="col"><%= f.text_field :first_name %></div>
  </div>

  <div class="row">
    <div class="col"><%= f.label :フリガナ %></div>
    <div class="col"><%= f.label :セイ %></div>
    <div class="col"><%= f.text_field :last_name_kana %></div>
    <div class="col"><%= f.label :メイ %></div>
    <div class="col"><%= f.text_field :first_name_kana %></div>
  </div>

  <div class="row">
    <div class="col"><%= f.label :メールアドレス %></div>
    <div class="col"><%= f.text_field :email %></div>
    <div class="col"></div>
  </div>

  <div class="row">
    <div class="col"><%= f.label :郵便番号（ハイフンなし） %></div>
    <div class="col"><%= f.text_field :zipcode %></div>
    <div class="col"></div>
  </div>

  <div class="row">
    <div class="col"><%= f.label :住所 %></div>
    <div class="col"><%= f.text_field :address %></div>
    <div class="col"></div>
  </div>

  <div class="row">
    <div class="col"><%= f.label :電話番号（ハイフンなし） %></div>
    <div class="col"><%= f.text_field :tel %></div>
    <div class="col"></div>
  </div>

  

    <%= f.submit "変更を保存する", class: "btn btn-primary" %>

  <% end %>
    <%= link_to "退会する", customers_withdraw_path, class: "btn btn-danger" %>

</div>