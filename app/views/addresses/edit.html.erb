<h1>Addresses#edit</h1>
<p>Find me in app/views/addresses/edit.html.erb</p>
<div class="container">
  	<div class="row">
   		<div class="col-lg-12">
      		<h2 class="title">配送先編集</h2>
			<div class="row">
		      <%= form_for  do |f| %>
		      <%= f.label :郵便番号%>
		      <%= f.text_field :postal_number %></br>

		      <%= f.label :住所%>
		      <%= f.text_field :address %></br>

		      <%= f.label :宛名%>
		      <%= f.text_field :name %></br>

		      <%= f.submit "編集する", class: "btn btn-primary" %>
		    </div>
		</div>
	</div>
</div>
