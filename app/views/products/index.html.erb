<div class="container">
  <div class="row">
	<div class="col-md-3 genre-form">
	  <%= render 'products/genres-search', genres: @genres %>
	</div>

	<div class="col-md-9">
	  <div class="row">
	    <h3>商品一覧全<%= @products.count %>件</h3>
	  </div>
	  <% @products.each do |product| %>
	    <tr>
		  <div class="col-md-3">
	      <td>
	      	<%= link_to product_path(product) do %>
	      	<%= attachment_image_tag product, :image, :fill, 100, 100, fallback: "no-data.jpg", size:"100x100" %><br>
	        <%= product.name %>
	        <% end %>
		  </td><br>
	      <td><%= product.price %></td>
		  </div>
		</tr>
	  <% end %>
	</div>
  </div>
</div>