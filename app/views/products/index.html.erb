<div class="container">
  <div class="row">
	<div class="col-md-3 genre-form">
	  <table>
		<thead>
		  <tr>
			<th>ジャンル検索</th>
		  </tr>
		</thead>
		<tbody>
		  <% @genres.each do |genre| %>
			<tr>
			  <td><%= link_to genre.genre_name, products_path(genre_id: genre) %>
			  </td>
			</tr>
		  <% end %>
		</tbody>
	  </table>
	</div>

	<div class="col-md-9">
	  <div class="row">
	    <h3>商品一覧全<%= Product.where(status: "true").count %>件</h3>
	  </div>
	  <% @products.each do |product| %>
	    <tr>
		  <div class="col-md-3">
	      <td>
	      	<%= link_to product_path(product) do %>
	      	<%= attachment_image_tag product, :image, :fill, 100, 100, fallback: "no-data.jpg", size:"100x100" %><br>
	        <%= product.name %>
	        <% end %>
		  </td><br>
	      <td><%= product.price %></td>
		  </div>
		</tr>
	  <% end %>
	</div>
  </div>
</div>