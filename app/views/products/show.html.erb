<h1>Products#show</h1>

<div class="container">
	<div class="row">
		<div class="col-md-2 genre-form">
			<table>
				<thead>
					<tr>
						<th>ジャンル検索</th>
					</tr>
				</thead>
			    <% @genres.each do |genre| %>
					<tbody>
						<tr>
							<td><%= link_to genre.genre_name, products_path(genre_id: genre.id) %></td>
						</tr>
					</tbody>
			    <% end %>
			</table>
		</div>

		<main class="col-md-10">
			<div class="row">
				<div class="col-md-4 item-image">
		            <%= attachment_image_tag @product, :image, :size => '200x200'%>
				</div>
				<div class="col-md-8">
					<p>商品名<%= @product.name %></p>
					<p>商品説明<%= @product.introduction %></p>
					<p>値段<%= @product.price %>円</p>
				<div class="btn-group">
					<%= form_for(@cart_item) do |f| %>
						<%= f.select :quantity, options_for_select((1..10).to_a) , include_blank: "個数選択", selected: 1 %>
                        <%= f.hidden_field :product_id, value: @product.id %><br>
                        <%= f.submit "カートに入れる", class: "btn btn-primary"%>
					<% end %>
	            </div>
			</div>
		</main>
	</div>
</div>